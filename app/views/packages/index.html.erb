<p id="notice"><%= notice %></p>

<h1>Packages</h1>

<table class="table table-bordered table-striped" border="1">
  <thead>
    <tr>
      <th colspan="1">Name</th>
      <th colspan="1"> Version</th>
      <th colspan="1">Publication</th>
      <th colspan="2">Title</th>
      <th colspan="3">Description</th>
      <th colspan="1">Authors</th>
      <th colspan="1">Maintainers</th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td colspan="1"><%= package.name %></td>
        <td colspan="1"><%= package.version %></td>
        <td colspan="1"><%= package.publication_date %></td>
        <td colspan="2"><%= package.title %></td>
        <td colspan="3"><%= package.description %></td>
        <td colspan="1"><%= package.authors.map(&:name).join(", ") %></td>
        <td colspan="1"><%= package.maintainers.map(&:name).join(", ") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
